{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/Athlete",
        "function": "getAthlete"
      },
      {
        "source": "/api/listRecentActivities",
        "function": "listAthleteActivities"
      },
      {
        "source": "/api/getSegmentsOfActivity",
        "function": "getSegmentsOfActivity"
      },
      {
        "source": "/stravaAuth",
        "function": "stravaAuth"
      },
      {
        "source": "/stravaAuthCallback",
        "function": "stravaAuthCallback"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
